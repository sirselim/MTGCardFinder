{
	"compilerOptions": {
	  "target": "es6",
	  "module": "commonjs",
	  "outDir": "./out",
	  "rootDir": "./src",
	  "strict": true,
	  "esModuleInterop": true,
	  "skipLibCheck": true,
	  "forceConsistentCasingInFileNames": true,
	  "declaration": true,
	  "declarationMap": true
	},
	"include": [
	  "src/**/*.ts"
	],
	"exclude": [
	  "node_modules",
	  "out"
	]
  }